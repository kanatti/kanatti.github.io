---
import { menuLinks } from "@/settings";

const year = new Date().getFullYear();
---

<footer class=`mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4
               pt-20 text-center align-top font-semibold text-gray-600 dark:text-gray-400
               sm:flex-row sm:justify-between sm:text-xs`
>
    <div class="me-0 sm:me-4">
        Copyright &copy; {year} Balagopal Kanattil
    </div>
    <nav class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500">
        {
            menuLinks.map((menuLink) => (
                <a
                    href={menuLink.path}
                    class="px-4 py-2 sm:py-0 sm:hover:text-textColor sm:hover:underline"
                >{menuLink.title}</a>
            ))
        }
    </nav>
</footer>
