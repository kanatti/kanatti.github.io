---
const { post } = Astro.props;

const {
    data: { title, description, previewImage, publishDate, updateDate },
    slug,
} = post;
---

<a href={`posts/${slug}`} class="flex max-w-48rem">
    <div class="flex max-w-48rem items-center">
        <img
            class="hidden lg:block w-64 mr-6 border border-slate-800 rounded-sm p-4"
            src={previewImage}
        />
        <div class="flex-col items-center">
            <div class="text-2xl mb-4">{title}</div>
            <div class="text-xl">{description}</div>
        </div>
    </div>
</a>
